{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "site": "firechat-react-nabildroid"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": "8082"
    },
    "hosting": {
      "port": 5000
    }
  }
}
